# The primary domain you own.
DOMAIN_NAME=yourdomain.com

# The email address for Let's Encrypt to send SSL certificate notifications.
SSL_EMAIL=youremail@yourdomain.com

# The timezone for n8n
GENERIC_TIMEZONE=America/Sao_Paulo

# The subdomain to access n8n.
# The final URL will be: n8n.yourdomain.com
SUBDOMAIN=n8n

# Create a strong API key to protect the Qdrant API.
QDRANT__SERVICE__API_KEY=your-qdrant-api-key-here

# Password for the PostgreSQL database. Use a strong password.
POSTGRES_PASSWORD=strong-password-for-postgres

# Password for the Redis instance. Use a strong password.
REDIS_PASSWORD=strong-password-for-redis

# Secret key for Chatwoot security.
# Generate one by running in your terminal: openssl rand -hex 64
SECRET_KEY_BASE=your_randomly_generated_secret_key_base_here

# The full public URL to access Chatwoot.
FRONTEND_URL=https://chatwoot.yourdomain.com

# Prevents new accounts from being created via the signup screen.
ENABLE_ACCOUNT_SIGNUP=false

# Sets the default language for the Chatwoot interface.
# You can use "en", if you want to
DEFAULT_LOCALE=pt-BR

# The name and email address that will appear as the sender.
MAILER_SENDER_EMAIL="Your Name <youremail@yourdomain.com>"

# Example for Gmail: smtp.gmail.com
SMTP_ADDRESS=smtp.yourprovider.com

# The SMTP server port. The most common is 587.
SMTP_PORT=587

# Your username for the SMTP provider.
# Example for Gmail: your-email@gmail.com
SMTP_USERNAME=youremail@yourdomain.com

# The password for the SMTP provider.
# IMPORTANT: If using Gmail, generate an "App Password". DO NOT use your regular password.
SMTP_PASSWORD=your_smtp_password_or_app_password

# The authentication method. Almost always 'login'.
SMTP_AUTHENTICATION=login

# Enables STARTTLS encryption. Keep as 'true' for most providers.
SMTP_ENABLE_STARTTLS_AUTO=true

# The domain used in the SMTP (HELO) communication. Usually your provider's domain.
# Example for Gmail: gmail.com
SMTP_DOMAIN=yourprovider.com
